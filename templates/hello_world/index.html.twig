{% extends 'base.html.twig' %}

{% block title %}Hello HelloWorldController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>
        Hola Mundo{% if lastVisit %}
        , tu última visita fue: {{ lastVisit }}
        {% endif %}
    </h1>

    {% if lastVisit is not null %}
    <p>La última visita registrada fue el {{ lastVisit }}.</p>
    {% else %}
    <p>¡Bienvenido, parece que es tu primera visita!</p>
    {% endif %}
</div>
{% endblock %}
